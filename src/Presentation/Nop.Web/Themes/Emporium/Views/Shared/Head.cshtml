@using Nop.Core

@inject IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;

    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/slick-slider-1.6.0.css");

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/1600.rtl.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/1024.rtl.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/mobile.rtl.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/tables.rtl.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/1600.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/1280.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/1024.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/mobile.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/tables.css");
        Html.AppendCssFileParts("~/Themes/Emporium/Content/css/styles.css");
    }

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/slick-slider-1.6.0.min.js");

    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/Emporium/Content/scripts/emporium.js");
}