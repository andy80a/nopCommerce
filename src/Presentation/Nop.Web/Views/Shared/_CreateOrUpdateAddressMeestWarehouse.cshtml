<script type="text/javascript" asp-location="Footer">
        $(function () {
            $("#@Html.IdFor(model => model.NovaPoshtaCityId)").change(function () {
                var selectedItem = $(this).val();
                var weightLimitation = "@(Model.Weight)";
                var ddlStates = $("#@Html.IdFor(model => model.NovaPoshtaWarehouseId)");
                var statesProgress = $("#states-loading-progress");
                statesProgress.show();
                $.ajax({
                    cache: false,
                    type: "GET",
                    url: "/country/GetMeestWarehousesByCityId",
                    data: { "cityId": selectedItem},
                    success: function (data) {
                        ddlStates.html('');
                        $.each(data, function (id, option) {
                            ddlStates.append($('<option></option>').val(option.id).html(option.name));
                        });
                        statesProgress.hide();
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert('Failed to retrieve warehouses.');
                        statesProgress.hide();
                    }
                });
            });
        });
</script>