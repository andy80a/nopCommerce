@model LvivStockQuantityHistorySearchModel

@{
    //page title
    ViewBag.PageTitle = "LvivStockQuantityHistory";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("LvivStock");
}

@{
    const string hideSearchBlockAttributeName = "LvivStockQualityHistory.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        LvivStockQuantityHistoryList
    </h1>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="ArticleNumber" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="ArticleNumber" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="GoDirectlyToCustomOrderNumber" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="GoDirectlyToCustomOrderNumber" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-lvivStock" class="btn btn-primary btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-body">
                    @await Html.PartialAsync("Table", new DataTablesModel
                    {
                        Name = "lvivStock-grid",
                        UrlRead = new DataUrl("LvivStockQuantityHistoryList", "Product", null),
                        SearchButtonId = "search-lvivStock",
                        Length = Model.PageSize,
                        LengthMenu = Model.AvailablePageSizes,
                        Filters = new List<FilterParameter>
                        {
                            new FilterParameter(nameof(Model.ArticleNumber)),
                            new FilterParameter(nameof(Model.GoDirectlyToCustomOrderNumber))
                        },
                        ColumnCollection = new List<ColumnProperty>
                        {
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.Id))
                            {
                                Title = "Id",
                                Width = "50"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.ArticleNumber))
                            {
                                Title = "ArticleNumber",
                                Width = "100"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.QuantityAdjustment))
                            {
                                Title = "QuantityAdjustment",
                                Width = "20"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.QuantityReserved))
                            {
                                Title = "QuantityReserved",
                                Width = "20"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.QuantityAdjustmentSum))
                            {
                                Title = "QASum",
                                Width = "20"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.QuantityReservedSum))
                            {
                                Title = "QRSum",
                                Width = "20"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.Message))
                            {
                                Title = "Message",
                                Width = "200"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.OrderId))
                            {
                                Title = "OrderId",
                                Width = "20"
                            },
                            new ColumnProperty(nameof(LvivStockQuantityHistoryItemModel.CreatedOnUtc))
                            {
                                Title = "CreatedOnUtc",
                                Width = "20"
                            },
                        }
                    })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>